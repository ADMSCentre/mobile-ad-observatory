<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="300dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/fragment_dialog_registration_error"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">

        <ImageView
            android:id="@+id/bad_internet_icon"
            android:layout_gravity="center_horizontal"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/bad_internet_icon" />

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/barlow_bold"
        android:textSize="17sp"
        android:letterSpacing="0.1"
        android:paddingHorizontal="0dp"
        android:paddingVertical="10dp"
        android:textAlignment="center"
        android:textColor="@color/yellow_primary"
        android:text="REGISTRATION FAILED"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unfortunately, there was an error with the registration process. Please check that you are connected to the internet, and then try again."
        android:textColor="@color/yellow_primary"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/buttonBackFromFailedRegistration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:gravity="center"
            android:theme="@style/SecondaryButton"
            android:textColor="@color/black"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
