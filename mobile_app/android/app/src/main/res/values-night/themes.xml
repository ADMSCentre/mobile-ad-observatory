<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AustralianMobileAdObservatory" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_primary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorPrimaryVariant">@color/yellow_primary_day</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_light</item>
        <item name="colorSecondaryVariant">@color/gray_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorTertiary">@color/white</item>
        <item name="android:textColorLink">@color/yellow_primary</item>
        <item name="android:textColorLinkInverse">@color/yellow_primary_night</item>
        <item name="colorAccent">@color/white</item>
        <item name="backgroundColor">@color/yellow_primary_day</item>
    </style>
    <style name="Switch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/yellow_primary_night</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/gray_dark
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#f1f1f1</item>
    </style>
    <style name="SecondaryButton" parent="Theme.AppCompat.Light">
        <item name="android:fontFamily">@font/barlow_semi_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:backgroundTint">@color/gray_light</item>
    </style>
</resources>